{
  "name": "Web Dev Kit",
  "short_name": "Web Dev Kit",
  "version": "1.0.1",
  "description": "Tools to facilitate web development",
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/wdk16.png",
      "32": "icons/wdk32.png",
      "48": "icons/wdk48.png",
      "128": "icons/wdk128.png"
    }
  },
  "icons": {
    "16": "icons/wdk16.png",
    "32": "icons/wdk32.png",
    "48": "icons/wdk48.png",
    "128": "icons/wdk128.png"
  },
  "manifest_version": 2
}
